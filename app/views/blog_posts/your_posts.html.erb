<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>
<h2>There are <%=@blog_posts.count %> Blog Posts</h2>

<div class="row">
  <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
       <div class="panel panel-info">
          <div class="panel-heading">
           <b><%= link_to blog_post.title, blog_post%></b>
          </div>
          <div class="panel-body">
          <b>by <%= blog_post.user.username %></b> <br>
           
             <%= blog_post.blog_entry[0..500] %>... [<%=link_to 'READ MORE', blog_post %>]
          </div>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
            <%= link_to 'Destroy', blog_post, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
       </div>
    </div>
    <% end %>
    </div>
<br>


<%= link_to 'New Blog Post', new_blog_post_path %>
